{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "lib": ["esnext", "dom", "dom.iterable"],
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"],
      "~types/*": ["src/types/*"],
      "@rest/*": ["src/utils/rest/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["./src"],
  "exclude": [],
  "ts-node": {
    "transpileOnly": true
  }
}
